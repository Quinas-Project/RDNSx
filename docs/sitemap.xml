---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
        xmlns:video="http://www.google.com/schemas/sitemap-video/1.1"
        xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
        http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">

  <!-- Homepage -->
  <url>
    <loc>https://docs.rdnsx.dev/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
    <image:image>
      <image:loc>https://docs.rdnsx.dev/assets/images/logo.svg</image:loc>
      <image:title>RDNSx Documentation</image:title>
      <image:caption>Fast and multi-purpose DNS toolkit written in Rust</image:caption>
    </image:image>
  </url>

  <!-- Guide Pages -->
  {% for page in site.pages %}
    {% if page.url contains '/guide/' %}
      <url>
        <loc>https://docs.rdnsx.dev{{ page.url }}</loc>
        <lastmod>{{ page.last_modified_at | default: page.date | date_to_xmlschema }}</lastmod>
        <changefreq>{{ page.changefreq | default: 'monthly' }}</changefreq>
        <priority>{{ page.priority | default: '0.8' }}</priority>
        {% if page.image %}
          <image:image>
            <image:loc>https://docs.rdnsx.dev{{ page.image }}</image:loc>
            <image:title>{{ page.title }}</image:title>
            <image:caption>{{ page.description | default: page.excerpt }}</image:caption>
          </image:image>
        {% endif %}
      </url>
    {% endif %}
  {% endfor %}

  <!-- API Reference Pages -->
  {% for page in site.pages %}
    {% if page.url contains '/api/' %}
      <url>
        <loc>https://docs.rdnsx.dev{{ page.url }}</loc>
        <lastmod>{{ page.last_modified_at | default: page.date | date_to_xmlschema }}</lastmod>
        <changefreq>{{ page.changefreq | default: 'monthly' }}</changefreq>
        <priority>{{ page.priority | default: '0.7' }}</priority>
      </url>
    {% endif %}
  {% endfor %}

  <!-- Feed and Assets -->
  <url>
    <loc>https://docs.rdnsx.dev/feed.xml</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>0.3</priority>
  </url>

  <!-- Assets for SEO -->
  <url>
    <loc>https://docs.rdnsx.dev/assets/images/logo.svg</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>yearly</changefreq>
    <priority>0.1</priority>
  </url>

</urlset>